<div class="row">
  <div class="col-md-8">
    <% @posts.each do |post| %>
      <h2><%= post.title %> </h2>
      <h3><%= post.subject %></h3>
      <h3>Categoria: <%= post.category.description %></h3>
      <p><%= postText post.text %></p>
      <strong><%= post.author.name %></strong>
      <hr>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtro</h3>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <% Category.all.each do |category| %>
            <li class="list-group-item">
          <%= link_to category.description, homepage_posts_path(category_id: category.id) %>
            </li>
          <%end%>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Busca</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/posts/homepage", method: "post") do %>
          <%= text_field_tag(:search_term) %>
          <%= submit_tag("Search") %>
        <% end %>


      </div>
    </div>
  </div>
</div>
